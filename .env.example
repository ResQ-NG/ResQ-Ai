# AWS Configuration
# Required for S3 file storage and processing
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# Application Configuration
# Environment: development, staging, production
APP_ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Optional: S3 Bucket Name
# AWS_BUCKET_NAME=your-bucket-name

# Optional: API Keys (if you add external services later)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/resq_ai

# Optional: Logging Level
# LOG_LEVEL=INFO


# Redis - Local Development
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_password_123  # Even dev should have a password
REDIS_DB=0
REDIS_USE_SSL=false
